  -- if typ dir ctk val = $find_styp(p, C, name)

;; Finder for type definitions

dec $find_typdef(cursor, context, name) : typdef?

def $find_typdef(p, C, TOP id)
  = $find_map<tid, typdef>(C.GLOBAL.TDENV, id)
def $find_typdef(GLOBAL, C, CURRENT id)
  = $find_map<tid, typdef>(C.GLOBAL.TDENV, id)
def $find_typdef(BLOCK, C, CURRENT id) = td
  -- if td = $find_map<tid, typdef>(C.BLOCK.TDENV, id)
def $find_typdef(BLOCK, C, CURRENT id)
  = $find_typdef(GLOBAL, C, CURRENT id)
  -- if eps = $find_map<tid, typdef>(C.BLOCK.TDENV, id)
def $find_typdef(LOCAL, C, CURRENT id) = td
  -- if td = $find_map<tid, typdef>(C.LOCAL.TDENV, id)
def $find_typdef(LOCAL, C, CURRENT id)
  = $find_typdef(BLOCK, C, CURRENT id)
  -- if eps = $find_map<tid, typdef>(C.LOCAL.TDENV, id)

;; Finder for function definitions

dec $to_fkey(argIL*) : (id?)*

def $to_fkey(eps) = eps
def $to_fkey(argIL_h :: argIL_t*) = id :: $to_fkey(argIL_t*)
  -- if NameA id _ = argIL_h
def $to_fkey(argIL_h :: argIL_t*) = eps :: $to_fkey(argIL_t*)
  -- otherwise

dec $find_funcdef(cursor, context, name, argIL*) : (fid, funcdef, id*)?

def $find_funcdef(p, C, TOP id, argIL*)
  = $find_func<funcdef>(id, $to_fkey(argIL*), C.GLOBAL.FDENV)
def $find_funcdef(GLOBAL, C, CURRENT id, argIL*)
  = $find_func<funcdef>(id, $to_fkey(argIL*), C.GLOBAL.FDENV)
def $find_funcdef(BLOCK, C, CURRENT id, argIL*) = (fid, fd, id_deft*)
  -- if (fid, fd, id_deft*)
      = $find_func<funcdef>(id, $to_fkey(argIL*), C.BLOCK.FDENV)
def $find_funcdef(BLOCK, C, CURRENT id, argIL*)
  = $find_funcdef(GLOBAL, C, CURRENT id, argIL*)
  -- if eps = $find_func<funcdef>(id, $to_fkey(argIL*), C.BLOCK.FDENV)
def $find_funcdef(LOCAL, C, CURRENT id, argIL*)
  = $find_funcdef(BLOCK, C, CURRENT id, argIL*)

dec $find_funcdef_by_name(cursor, context, name) : funcdef

def $find_funcdef_by_name(p, C, TOP id) = fd
  -- if (_, fd) = $find_func_by_name(id, C.GLOBAL.FDENV)
def $find_funcdef_by_name(GLOBAL, C, CURRENT id) = fd
  -- if (_, fd) = $find_func_by_name(id, C.GLOBAL.FDENV)
def $find_funcdef_by_name(BLOCK, C, CURRENT id) = fd
  -- if (_, fd) = $find_func_by_name(id, C.BLOCK.FDENV)
def $find_funcdef_by_name(BLOCK, C, CURRENT id)
  = $find_funcdef_by_name(GLOBAL, C, CURRENT id)
  -- if eps = $find_func_by_name(id, C.BLOCK.FDENV)
def $find_funcdef_by_name(LOCAL, C, CURRENT id)
  = $find_funcdef_by_name(BLOCK, C, CURRENT id)

;; Finder for constructor definitions

dec $find_consdef(context, name, argIL*) : (cid, consdef, id*)?

def $find_consdef(C, TOP id, argIL*)
  = $find_func<consdef>(id, $to_fkey(argIL*), C.GLOBAL.CDENV)
def $find_consdef(C, CURRENT id, argIL*)
  = $find_func<consdef>(id, $to_fkey(argIL*), C.GLOBAL.CDENV)

dec $find_consdefs_by_name(context, name) : (cid, consdef)*

def $find_consdefs_by_name(C, TOP id)
  = $find_funcs_by_name<consdef>(id, cid*, cd*)
  -- if `{ (cid -> cd)* } = C.GLOBAL.CDENV
def $find_consdefs_by_name(C, CURRENT id)
  = $find_funcs_by_name<consdef>(id, cid*, cd*)
  -- if `{ (cid -> cd)* } = C.GLOBAL.CDENV
