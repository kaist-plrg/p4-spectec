;;
;; Cursor
;;

syntax cursor = GLOBAL | BLOCK | LOCAL

var p : cursor

;;
;; Layered context
;;

;; Global layer

syntax glayer =
  { CDENV cdenv,
    TDENV tdenv,
    FDENV fdenv,
    FRAME frame }

;; Block layer

syntax bkind = EMPTY | EXTERN | PARSER | CONTROL | PACKAGE

dec $is_empty_blockkind(bkind) : bool
def $is_empty_blockkind(bkind) = (bkind = EMPTY)

dec $is_extern_blockkind(bkind) : bool
def $is_extern_blockkind(bkind) = (bkind = EXTERN)

dec $is_parser_blockkind(bkind) : bool
def $is_parser_blockkind(bkind) = (bkind = PARSER)

dec $is_control_blockkind(bkind) : bool
def $is_control_blockkind(bkind) = (bkind = CONTROL)

dec $is_package_blockkind(bkind) : bool
def $is_package_blockkind(bkind) = (bkind = PACKAGE)

syntax blayer =
  { ID id,
    KIND bkind,
    TDENV tdenv,
    FDENV fdenv,
    FRAME frame }

;; Local layer

syntax lkind =
  | EMPTY
  | EXTERNFUNC
  | FUNC typ
  | ACTION
  | EXTERNMETHOD
  | EXTERNABSTRACTMETHOD typ
  | PARSERSTATE
  | CONTROLAPPLYMETHOD
  | TABLEAPPLYMETHOD

dec $is_empty_localkind(lkind) : bool
def $is_empty_localkind(lkind)
  = (lkind = EMPTY)

dec $is_extern_func_localkind(lkind) : bool
def $is_extern_func_localkind(lkind)
  = (lkind = EXTERNFUNC)

dec $is_func_localkind(lkind) : bool
def $is_func_localkind(FUNC _) = true
def $is_func_localkind(_) = false
  -- otherwise

dec $is_action_localkind(lkind) : bool
def $is_action_localkind(lkind)
  = (lkind = ACTION)

dec $is_extern_method_localkind(lkind) : bool
def $is_extern_method_localkind(lkind)
  = (lkind = EXTERNMETHOD)

dec $is_extern_abstract_method_localkind(lkind) : bool
def $is_extern_abstract_method_localkind(EXTERNABSTRACTMETHOD _) = true
def $is_extern_abstract_method_localkind(_) = false
  -- otherwise

dec $is_parser_state_localkind(lkind) : bool
def $is_parser_state_localkind(lkind)
  = (lkind = PARSERSTATE)

dec $is_control_apply_method_localkind(lkind) : bool
def $is_control_apply_method_localkind(lkind)
  = (lkind = CONTROLAPPLYMETHOD)

dec $is_table_apply_method_localkind(lkind) : bool
def $is_table_apply_method_localkind(lkind)
  = (lkind = TABLEAPPLYMETHOD)

syntax llayer =
  { ID id,
    KIND lkind,
    TDENV tdenv,
    FRAMES frame* }

;;
;; Typing context
;;

syntax context =
  { GLOBAL glayer,
    BLOCK blayer,
    LOCAL llayer }

var C : context

;;
;; Constructor
;;

dec $empty_context : context

def $empty_context = C
  -- if glayer =
      { CDENV $empty_map<cid, consdef>,
        TDENV $empty_map<tid, typdef>,
        FDENV $empty_map<fid, funcdef>,
        FRAME $empty_map<id, styp> }
  -- if blayer =
      { ID "",
        KIND EMPTY,
        TDENV $empty_map<tid, typdef>,
        FDENV $empty_map<fid, funcdef>,
        FRAME $empty_map<id, styp> }
  -- if llayer =
      { ID "",
        KIND EMPTY,
        TDENV $empty_map<tid, typdef>,
        FRAMES ([ $empty_map<id, styp> ]) }
  -- if C = { GLOBAL glayer, BLOCK blayer, LOCAL llayer }

;;
;; Frame management
;;

dec $enter(context) : context

def $enter(C) = C[ .LOCAL.FRAMES = $empty_map<id, styp> :: C.LOCAL.FRAMES ]

dec $exit(context) : context

def $exit(C) = C[ .LOCAL.FRAMES = frame_t* ]
  -- if frame_h :: frame_t* = C.LOCAL.FRAMES

;;
;; Setters
;;

dec $set_blockkind(context, bkind) : context

def $set_blockkind(C, bkind) = C[ .BLOCK.KIND = bkind ]

dec $set_localkind(context, lkind) : context 

def $set_localkind(C, lkind) = C[ .LOCAL.KIND = lkind ]

dec $set_blockframe(context, frame) : context

;;
;; Getters
;;

dec $get_typ_ret_lkind(lkind) : typ

def $get_typ_ret_lkind(FUNC typ) = typ
def $get_typ_ret_lkind(ACTION) = VoidT
def $get_typ_ret_lkind(EXTERNABSTRACTMETHOD typ) = typ
def $get_typ_ret_lkind(CONTROLAPPLYMETHOD) = VoidT

;;
;; Collecting bound type identifiers
;;

dec $bound_tids(cursor, context) : tidset

def $bound_tids(GLOBAL, C) = $empty_set<tid>
def $bound_tids(BLOCK, C) = $dom_map<tid, typdef>(C.BLOCK.TDENV)
def $bound_tids(LOCAL, C)
  = $union_set<tid>(
      $dom_map<tid, typdef>(C.LOCAL.TDENV),
      $bound_tids(BLOCK, C)
    )

